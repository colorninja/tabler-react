{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "outDir": "example/src",
    "outFile": "example/src/tabler-react.d.ts",
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/tabler-react.ts"],
  "exclude": ["node_modules"]
}
